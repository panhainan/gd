                        &nbsp;
                        <a href="javascript:void(0)">点赞</a>
                        &nbsp;
                        <a href="javascript:void(0)">已参加({{34}})</a>

                        </p>
                        <div id="activityId{{id}}"   style="width:518px;display: none;">
                           <input id="{{id}}"   style="width:100%;height:25px;"/>
                           <button class="my-btn">提交</button>
                      </div>

                    </div>
                </td>
            </tr>
      {{/each}}
    </script>

